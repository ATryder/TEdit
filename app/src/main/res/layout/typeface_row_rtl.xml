<?xml version="1.0" encoding="utf-8"?>
<com.atr.tedit.widget.LinearLayoutCheckable xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:orientation="horizontal">

    <TextView android:id="@+id/typefaceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="right|center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_weight="1"
        android:focusable="false"/>
    <CheckBox android:id="@+id/typefaceCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:gravity="right|center_vertical"
        android:text=""
        android:textSize="25sp"
        android:layout_weight="0"
        android:focusable="false"
        android:clickable="false"/>

</com.atr.tedit.widget.LinearLayoutCheckable>